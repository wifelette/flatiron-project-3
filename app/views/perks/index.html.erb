  <div class="card-header h3">
    Perks
  </div>

  <table class="table table-striped table-hover table-sm">
    <thead class="thead-light">
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Limited?</th>
        <th scope="col">$ Addon?</th>
        <th scope="col">Options</th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @perks.each do |perk| %>
      <tr>
        <td><%= perk.name %></td>
        <td>
          <% if perk.limited.present? %>
          ✅
          <% end %>
        </td>
        <td>
          <% if perk.paid_addon.present? %>
          ✅
          <% end %>
        </td>
        <td><%= link_to "View", perk_path(perk), class: "btn btn-primary small" %>
        <td><%= link_to "Edit", edit_perk_path(perk), class: "btn btn-warning small"  %></td>
        <td><%= button_to "Delete", perk, method: :delete, class: "btn btn-danger small"  %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
  <p><%= link_to "Create a New Perk", new_perk_path, class: "btn btn-success"  %></p>
  <p><%= link_to "Back to Events", events_path, class: "btn btn-primary" %></p>