<%= form_for perk do |f| %>
<%= f.label :name %><br>
<%= f.text_area :name, size: "50x2" %><br>

<%= f.label :description %><br>
<%= f.text_area :description, size: "50x3" %><br>

<%= f.label :deliverable %><br>
<%= f.text_area :deliverable, size: "50x3" %><br>

<%= f.label :limited %><br>
<%= f.check_box :limited %><br>

<%= f.label "Paid Addon" %><br>
<%= f.check_box :paid_addon %><br>

<%= f.submit "Submit", class: "button generic" %>
<% end %>