<h1><%= @package.name %></h1>

<p><strong>Price </strong><br>
  <%= in_money(@package.price) %></p>

<h2>Package Perks</h2>
<ul>
  <% @package.specs.each do |spec| %>
  <li><%= spec.perk.name %>
    <% if spec.qty > 1 %>(<%= spec.qty %>) <% end %></li>
  <% end %>
</ul>

<%= link_to "Edit Package", edit_event_package_path, class: "button edit"  %><br>

<%= button_to "Delete Package", [@event, @package], method: :delete, class: "button delete" %>

<hr>

<p><%= link_to "Back to Event", event_path(@event), class: "button index"  %></p>