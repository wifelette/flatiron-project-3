<%= form_for event do |f| %>
<%= f.label :name %>
<%= f.text_field :name %><br>

<%= f.label "Start Date" %>
<%= f.date_field :start_date, data:{ provide:'datepicker' } %><br>
<%= f.label "End Date" %>
<%= f.date_field :end_date, data:{ provide:'datepicker' } %><br>

<%= f.label :location %>
<%= f.text_field :location %><br>

<p><%= f.submit %></p>
<% end %>